{
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "srbTranslit@srbodroid.com"
    }
  },
  "name": "srbTranslit",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "description": "Transliterates Serbian Cyrillic to Serbian Latin on any web page",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "128": "is-on.png"
  },
  "action": {
    "default_icon": "is-on.png",
    "default_title": "srbTranslit",
    "browser_style": true
  }
}

